<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyecto_jgarrido.Views.Comments"
             Title="Comentarios">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Menu" IconImageSource="menu.png" Clicked="OnMenuClicked" />
    </ContentPage.ToolbarItems>
    <StackLayout Padding="10">
        <Label Text="Categorias de Pausas Activas"
               FontSize="Large"
               HorizontalOptions="Center" />
        <ListView x:Name="CommentsListView"
                  HasUnevenRows="True"
                  Margin="0,20,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10" Orientation="Vertical" HorizontalOptions="FillAndExpand">
                            <Label Text="{Binding Comentario}" 
                                   FontSize="Small"
                                   LineBreakMode="WordWrap" />
                            
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Crear Comentario" Clicked="Button_Comentary"/>
    </StackLayout>
</ContentPage>
