<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyecto_jgarrido.Views.NewComment"
             Title="Nuevo Comentario">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Menu" IconImageSource="menu.png" Clicked="OnMenuClicked" />
    </ContentPage.ToolbarItems>
    <StackLayout Padding="10">
            <Label Text="Crear Nuevo Comentario"
                   FontSize="Large"
                   HorizontalOptions="Center" />

            
            <Label Text="Comentario" />
            <Editor x:Name="ComentaryEditor" Placeholder="Comentario" HeightRequest="100" />

            <Button Text="Crear Comentario"
                    Clicked="OnCrearComentaryClicked" 
                    BackgroundColor="LightBlue" 
                    TextColor="White" 
                    Margin="0,20,0,0" />
        </StackLayout>
</ContentPage>
